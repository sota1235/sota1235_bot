{
  "name": "sota1235_bot",
  "private": true,
  "main": "index.js",
  "engines": {
    "node": ">=v12.10.0"
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "@slack/bolt": "^1.3.0",
    "@slack/web-api": "^5.10.0",
    "@types/jest": "^26.0.0",
    "@types/luxon": "^1.24.1",
    "@types/node-cron": "^2.0.3",
    "@types/node-fetch": "^2.5.7",
    "dotenv": "^8.1.0",
    "luxon": "^1.24.1",
    "node-cron": "^2.0.3",
    "node-fetch": "^2.6.0",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "3.0.7",
    "jest": "24.9.0",
    "lint-staged": "9.4.1",
    "prettier": "1.18.2",
    "ts-jest": "24.1.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "run:dev": "node -r dotenv/config lib/index.js",
    "fix": "npm run prettier && npm run eslint:fix",
    "lint": "npm run _prettier -- -c && npm run eslint",
    "eslint": "eslint 'src/**/*.ts'",
    "eslint:fix": "npm run eslint --fix",
    "_prettier": "prettier './src/**/*.ts'",
    "prettier": "npm run _prettier -- --write",
    "test": "jest",
    "test:ci": "jest -c ./jest.config.ci.js"
  },
  "keywords": [],
  "author": "@sota1235",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run fix",
      "git add"
    ]
  }
}
