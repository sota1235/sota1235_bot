{
  "name": "sota1235_bot",
  "private": true,
  "main": "index.js",
  "engines": {
    "node": "16.x"
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "@slack/bolt": "^2.3.0",
    "@slack/web-api": "^5.10.0",
    "@types/ioredis": "^4.17.0",
    "@types/jest": "^27.0.0",
    "@types/jsdom": "^16.2.3",
    "@types/luxon": "^1.24.1",
    "@types/node-cron": "^2.0.3",
    "@types/node-fetch": "^2.5.7",
    "dotenv": "^8.1.0",
    "iconv-lite": "^0.6.2",
    "ioredis": "^4.17.3",
    "jsdom": "^16.2.2",
    "luxon": "^1.24.1",
    "node-cron": "^2.0.3",
    "node-fetch": "^2.6.0",
    "typescript": "^4.0.0"
  },
  "devDependencies": {
    "@sota1235/eslint-config": "^2.0.0",
    "eslint": "^7.32.0",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "lint-staged": "9.4.3",
    "prettier": "1.18.2",
    "ts-jest": "24.3.0",
    "ts-node": "^10.0.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "run:dev": "node -r dotenv/config lib/index.js",
    "fix": "npm run prettier && npm run eslint:fix",
    "lint": "npm run _prettier -- -c && npm run eslint",
    "eslint": "eslint 'src/**/*.ts'",
    "eslint:fix": "npm run eslint --fix",
    "_prettier": "prettier './src/**/*.ts'",
    "prettier": "npm run _prettier -- --write",
    "debug": "ts-node -r dotenv/config",
    "test": "jest",
    "test:ci": "jest -c ./jest.config.ci.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run fix"
    ]
  }
}
