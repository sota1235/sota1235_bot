{
  "name": "sota1235_bot",
  "private": true,
  "main": "index.js",
  "engines": {
    "node": "22.x"
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "@sentry/node": "8.49.0",
    "@slack/bolt": "^3.17.1",
    "@slack/web-api": "^7.0.0",
    "@types/express-serve-static-core": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.0.0",
    "@types/lodash": "^4.14.182",
    "@types/luxon": "^3.0.0",
    "@types/node-cron": "^3.0.0",
    "dotenv": "^16.0.0",
    "iconv-lite": "^0.6.2",
    "jsdom": "^26.0.0",
    "luxon": "^3.0.0",
    "node-cron": "^3.0.0",
    "source-map-support": "^0.5.20",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@sentry/types": "8.33.1",
    "@sota1235/eslint-config": "5.0.5",
    "@types/mustache": "^4.2.1",
    "@types/node": "24.5.2",
    "@types/source-map-support": "^0.5.10",
    "eslint": "9.35.0",
    "husky": "9.1.7",
    "jest": "30.1.3",
    "lint-staged": "15.5.2",
    "mustache": "^4.2.0",
    "prettier": "3.6.2",
    "ts-jest": "29.4.4",
    "ts-node": "^10.0.0",
    "typescript-eslint": "8.44.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start:dev": "node -r dotenv/config lib/index.js",
    "start:prod": "node lib/index.js",
    "start": "npm run start:prod",
    "fix": "npm run prettier && npm run eslint:fix",
    "lint": "npm run _prettier -- -c && npm run eslint",
    "eslint": "eslint 'src/**/*.ts'",
    "eslint:fix": "npm run eslint --fix",
    "generate:appYaml": "ts-node src/tool/generateAppYaml.ts",
    "_prettier": "prettier './src/**/*.ts'",
    "prettier": "npm run _prettier -- --write",
    "debug": "ts-node -r dotenv/config",
    "test": "jest",
    "test:ci": "jest -c ./jest.config.ci.js",
    "prepare": "husky",
    "gcp-build": "npm run build"
  },
  "lint-staged": {
    "*.ts": [
      "npm run fix"
    ]
  }
}
